FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(U|p)"
    {
        solver         PCG;
        preconditioner DIC;
        tolerance      1e-9;
        relTol         0;
    }
    T
    {
        $p;
        nAlphaCorr      1;
        nAlphaSubCycles 1;
    }
}

